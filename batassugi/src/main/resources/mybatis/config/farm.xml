<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="farm">
    <!-- 농지 등록 -->
    <insert id="FarmInsert" parameterType="farmVo">
      <selectKey resultType="int" keyProperty="farmNo"
      order="BEFORE">
      select farm_SEQ.nextval FROM DUAL
      </selectKey>
      insert into
      farm(farm_no,id,farm_size,farm_address,farm_startdate,farm_enddate)
      values(#{farmNo},#{memberInfoVo.id},#{farmSize},#{farmAddress},#{farmStartdate},#{farmEnddate})
    </insert>

<!-- 해당밭에 재배가능작물을 테이블에 넣는다. -->
    <insert id="avaliableCrops" parameterType="map">
    insert into available_crops values(#{crops_no},#{farm_no})
    </insert>
    
    <select id="getNow_Date" resultType="String">
   	select to_char(SYSDATE, 'YYYY.MM.DD') from dual
   
   </select>
    
</mapper>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
















